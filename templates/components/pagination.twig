{% if posts.pagination.pages is not empty %}
  <nav class="pagination" aria-label="Постраничная навигация">
    <ul>
      {# Prev #}
      <li class="pagination__item">
        {% if posts.pagination.prev %}
        <a class="pagination__link" href="{{ posts.pagination.prev.link }}" aria-label="Назад">
          {% include "base/icon.twig" with {name: "chevron"} %}
        </a>
        {% else %}
        <span class="pagination__link is-disabled" aria-label="Назад">
          {% include "base/icon.twig" with {name: "chevron"} %}
        </span>
        {% endif %}
      </li>

      {# Pages #}
      {% for page in posts.pagination.pages %}
        {% if post.link %}
          <li class="pagination__item">
            <a class="pagination__link" href="{{ page.link }}">
              {{ page.title }}
            </a>
          </li>
        {% else %}
          <li class="pagination__item">
            <span class="pagination__link is-active">
              {{ page.title }}
            </span>
          </li>
        {% endif %}
      {% endfor %}

      {# Next #}
      {% if posts.pagination.next %}
        <li class="pagination__item">
          <a class="pagination__link" href="{{ posts.pagination.next.link }}" aria-label="Вперёд">
            {{ chevron_next }}
          </a>
          {% else %}
          <span class="pagination__link is-disabled" aria-label="Вперёд">
            {{ chevron_next }}
          </span>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
